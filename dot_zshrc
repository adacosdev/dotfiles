# Bat instead of cat
alias cat='bat --paging=never'

# Docker cleanup
alias docker-clean='docker system prune -a --volumes'

# fnm
FNM_PATH="/home/adacosdev/.local/share/fnm"
if [ -d "$FNM_PATH" ]; then
  export PATH="$FNM_PATH:$PATH"
  eval "`fnm env`"
fi

# --- FNM Config ---
export PATH="$HOME/.local/share/fnm:$PATH"
eval "$(fnm env --use-on-cd)"

# --- Pyenv Config ---
export PYENV_ROOT="$HOME/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"

eval "$(zoxide init zsh)"

# Abrir archivos en VS Code con búsqueda difusa (CTRL+P en terminal)
# Solo escribe 'cf' y empieza a teclear el nombre del archivo
cf() {
  local file
  file=$(fd --type f --strip-cwd-prefix --hidden --exclude .git | fzf --preview 'bat --color=always --style=numbers --line-range :500 {}')
  [ -n "$file" ] && code "$file"
}

# Bonus: Buscar y moverte a una carpeta rápido
zf() {
  local dir
  dir=$(fd --type d --strip-cwd-prefix --hidden --exclude .git | fzf)
  [ -n "$dir" ] && z "$dir"
}

